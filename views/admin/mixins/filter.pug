mixin filter()
  form.d-flex.align-items-end.gap-3(method="GET" action=`${prefixAdmin}/pets` sort)
    // Trạng thái
    div
      label.form-label(for="status") Trạng thái
      select.form-select(name="status" id="status" sort-select)
        option(value="") -- Tất cả --
        option(value="active") Đang bán
        option(value="inactive") Không bán
    // Sắp xếp
    div
      label.form-label(for="sort") Sắp xếp
      select.form-select(name="sort" id="sort" sort-select)
        option(value="") -- Không sắp xếp --
        option(value="price-asc") Giá tăng dần
        option(value="price-desc") Giá giảm dần
        option(value="position-asc") Vị trí tăng dần
        option(value="position-desc") Vị trí giảm dần
        option(value="name-asc") Tên (A-Z)
        option(value="name-desc") Tên (Z-A)

    button.btn.btn-outline-success(type="submit") Lọc
    button.btn.btn-outline-secondary(type="button" sort-clear) Xóa lọc
