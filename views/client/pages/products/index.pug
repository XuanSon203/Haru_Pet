extends ../../layout/default.pug

block content
    .container.mt-5
        h1.text-center.mb-4 Danh Sách Sản Phẩm

        .row
            each product in products
                .col-md-4.mb-4
                    .card.shadow-sm
                        img.card-img-top(src=product.image, alt=product.name, style="height: 200px; object-fit: cover;")
                        .card-body
                            h5.card-title= product.name
                            p.card-text Giá: #{product.price} VNĐ
                            a.btn.btn-primary(href=`/products/${product.slug}`) Xem Chi Tiết
